{
  "name": "@printers/printers",
  "version": "0.1.4",
  "description": "Cross-platform printer library for Node.js, Deno, and Bun",
  "main": "node.js",
  "files": [
    "node.js",
    "napi/index.js",
    "napi/*.node"
  ],
  "napi": {
    "name": "printers",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-pc-windows-msvc",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "armv7-unknown-linux-gnueabihf",
        "armv7-unknown-linux-musleabihf",
        "x86_64-unknown-linux-musl",
        "x86_64-unknown-freebsd",
        "i686-pc-windows-msvc",
        "x86_64-unknown-linux-gnu",
        "x86_64-apple-darwin",
        "x86_64-pc-windows-msvc"
      ]
    }
  },
  "engines": {
    "node": ">= 20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/esimkowitz/printers-js.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "scripts": {
    "build": "napi build --platform --release && mkdir -p napi && mv index.js index.d.ts *.node napi/ 2>/dev/null || true",
    "build:debug": "napi build --platform && mkdir -p napi && mv index.js index.d.ts *.node napi/ 2>/dev/null || true",
    "build:rust": "cargo build --release",
    "build:all": "npm run build:rust && npm run build",
    
    "test": "PRINTERS_JS_SIMULATE=true npm run test:jest",
    "test:jest": "jest --config jest.config.js --coverage",
    "test:real": "node tests/node.test.js",
    "test:node": "PRINTERS_JS_SIMULATE=true npm run test:jest",
    
    "dev": "node --watch node.js",
    "lint": "echo 'Use deno task lint for comprehensive linting'",
    "fmt": "echo 'Use deno task fmt for comprehensive formatting'",
    
    "prepublishOnly": "napi prepublish -t npm",
    "artifacts": "napi artifacts", 
    "universal": "napi universal",
    "version": "napi version"
  },
  "packageManager": "npm@10.0.0"
}
