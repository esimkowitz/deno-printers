{
  "tasks": {
    "dev": "deno run --allow-ffi --watch deno.ts",
    "build": "cargo build --release",
    "build:napi": "npm run build",
    "build:all": "deno task build && deno task build:napi",
    "test": "PRINTERS_JS_SIMULATE=true deno test --allow-ffi --allow-env tests/universal.test.ts",
    "test:real": "deno test --allow-ffi --allow-env tests/universal.test.ts",
    "test:doc": "deno test --doc --allow-ffi --allow-env deno.ts",
    "test:universal": "PRINTERS_JS_SIMULATE=true deno run --allow-ffi --allow-env tests/universal.test.ts",
    "test:node": "PRINTERS_JS_SIMULATE=true node tests/node.test.js",
    "test:bun": "PRINTERS_JS_SIMULATE=true bun test tests/bun.test.ts",
    "test:all": "./test-all.sh",
    "test:junit": "PRINTERS_JS_SIMULATE=true deno test --allow-ffi --allow-env tests/universal.test.ts --junit-path=test-results/deno-junit.xml",
    "test:all:real": "deno task test:real && node tests/node.test.js && bun tests/bun.test.ts",
    "dev:deno": "deno run --allow-ffi --allow-env --watch deno.ts",
    "dev:node": "npm run dev",
    "dev:bun": "bun --watch bun.js",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check deno.ts index.ts",
    "check:all": "deno check deno.ts index.ts && npm run build && echo 'All runtimes checked successfully'",
    "bump:patch": "deno run --allow-read --allow-write scripts/bump-version.ts patch",
    "bump:minor": "deno run --allow-read --allow-write scripts/bump-version.ts minor",
    "bump:major": "deno run --allow-read --allow-write scripts/bump-version.ts major",
    "docs": "deno doc --html --name=\"@printers/printers\" deno.ts index.ts",
    "docs:serve": "deno doc --serve --name=\"@printers/printers\" deno.ts index.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/path": "jsr:@std/path@1",
    "@std/semver": "jsr:@std/semver@1"
  },
  "fmt": {
    "exclude": [
      "reports/",
      "coverage/",
      "target/",
      ".claude/",
      "LICENSE",
      "*.rs",
      "Cargo.toml",
      "Cargo.lock",
      "node.js",
      "bun.js",
      "index.js",
      "package.json",
      "napi/"
    ]
  },
  "lint": {
    "exclude": [
      "reports/",
      "coverage/",
      "target/",
      ".claude/",
      "*.rs",
      "Cargo.toml",
      "Cargo.lock",
      "node.js",
      "bun.js",
      "index.js",
      "index.ts",
      "package.json",
      "napi/",
      "tests/bun.test.ts",
      "tests/shared.ts",
      "tests/universal.test.ts",
      "tests/node.*.js",
      "tests/jest.setup.js",
      "examples/"
    ]
  },
  "exclude": [
    "node.js",
    "bun.js",
    "index.js",
    "index.d.ts",
    "package.json",
    "napi/",
    "target/"
  ]
}
